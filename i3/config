# smart_borders no_gaps | on
focus_follows_mouse  yes
for_window [class=".*"] border pixel 3

smart_borders on
gaps inner 10
gaps outer 9

# Custom ws gaps
workspace $ws2 gaps outer 0
workspace $ws2 gaps inner 8

