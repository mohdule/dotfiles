# Window colors
# 				[Background]		[border]		[Text]		[Indicator]
client.focused                  $secondary	        $accent 		$textColor	$accent
client.unfocused                $secondary              $primary	        $secondary	$accent
client.focused_inactive         $secondary              $secondary		$accent
client.urgent			$urgent		        $urgent	                #ffffff		$accent

hide_edge_borders both

